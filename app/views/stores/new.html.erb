<%= render "shared/header" %>
<div class="store-new-title">
  <h1>管理店舗登録画面</h1>
</div>
<%=form_with model: @store, local: true do |f|%>
  <div class="store-create-form">
      <%= render 'shared/error_messages', model: @store %>
    <div class="store-form">
      <p class="store-info">店名</p>
      <%=f.text_field :store_name %>
    </div>
    <div class="store-form">
      <p class="store-info">電話番号</p>
      <%=f.text_field :tel%>
    </div>
    <div class="store-form">
      <p class="store-info">開店時間</p>
      <%=f.text_field :opening%>
    </div>
    <div class="store-form">
      <p class="store-info">閉店時間</p>
      <%=f.text_field :closing%>
    </div>
    <div class="store-form">
      <%=f.submit "登録する"%>
    </div>
  </div>
<% end %>

